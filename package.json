{
    "name": "react-mirror",
    "version": "0.0.1",
    "description": "Create synchronized replicas of a React DOM element",
    "author": "iamogbz",
    "repository": {
        "type": "git",
        "url": "https://github.com/iamogbz/react-mirror"
    },
    "bugs": {
        "url": "https://github.com/iamogbz/react-mirror/issues"
    },
    "homepage": "https://github.com/iamogbz/react-mirror#readme",
    "license": "Unlicense",
    "keywords": [
        "mirror",
        "react-mirror",
        "react",
        "react-dom",
        "react-portal",
        "portal"
    ],
    "engines": {
        "node": ">=8",
        "npm": ">=6"
    },
    "main": "lib/main.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib"
    ],
    "scripts": {
        "lint": "eslint . --ext .js,.ts,.jsx,.tsx",
        "build": "webpack --mode=production",
        "build-watch": "webpack --mode=development --watch",
        "build-types": "tsc --project tsconfig.prod.json --emitDeclarationOnly --declaration",
        "test": "jest",
        "coveralls": "cat ./artifacts/coverage/lcov.info | coveralls",
        "typecheck": "tsc --project tsconfig.prod.json --noEmit",
        "commit": "git-cz",
        "release": "semantic-release"
    },
    "release": {
        "dryRun": false,
        "branches": [
            "+([0-9])?(.{+([0-9]),x}).x",
            "main",
            "next",
            "next-major",
            {
                "name": "beta",
                "prerelease": true
            },
            {
                "name": "alpha",
                "prerelease": true
            }
        ],
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/npm",
            "@semantic-release/github"
        ]
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "jsdom",
        "setupFilesAfterEnv": [
            "./config/setupTests.ts"
        ],
        "moduleDirectories": [
            "./src",
            "./tests",
            "./node_modules"
        ],
        "testPathIgnorePatterns": [
            "./artifacts/",
            "./node_modules/"
        ],
        "testRegex": "(/__tests__/.+(\\.|/)(test|spec))\\.[jt]sx?$",
        "coverageDirectory": "./artifacts/coverage"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "lint-staged": {
        "*.(j|t)s{,x}": [
            "pnpm lint",
            "pnpm test -- --bail --findRelatedTests"
        ]
    },
    "peerDependencies": {
        "react": "^16.0.0 || ^17.0.0 || ^18.0.0",
        "react-dom": "^16.0.0 || ^17.0.0 || ^18.0.0"
    },
    "dependencies": {
        "specificity": "^1.0.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.22.10",
        "@babel/core": "^7.22.10",
        "@babel/eslint-parser": "^7.22.10",
        "@babel/plugin-syntax-flow": "^7.22.5",
        "@babel/plugin-transform-react-jsx": "^7.22.5",
        "@babel/preset-typescript": "^7.22.5",
        "@commitlint/cli": "^18.4.0",
        "@commitlint/config-conventional": "^18.0.0",
        "@testing-library/react": "^14.0.0",
        "@types/eslint": "^8.44.2",
        "@types/eslint-scope": "^3.7.4",
        "@types/jest": "^29.5.3",
        "@types/node": "^20.5.0",
        "@types/react": "^18.2.20",
        "@types/react-dom": "^18.2.7",
        "@types/react-test-renderer": "^18.0.0",
        "@types/webpack": "^5.28.1",
        "@types/webpack-node-externals": "^3.0.0",
        "@typescript-eslint/eslint-plugin": "^6.4.0",
        "@typescript-eslint/parser": "^6.4.0",
        "acorn": "^8.10.0",
        "autoprefixer": "^10.4.15",
        "babel-loader": "^9.1.3",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "commitizen": "^4.3.0",
        "coveralls": "^3.1.1",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.47.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-import": "^2.28.0",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-prettier": "^5.0.0",
        "eslint-plugin-react": "^7.33.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "husky": "^8.0.3",
        "jest": "^29.6.2",
        "jest-environment-jsdom": "^29.6.2",
        "lint-staged": "^15.0.1",
        "postcss": "^8.4.28",
        "prettier": "^3.0.2",
        "prettier-eslint": "^16.1.1",
        "prop-types": "^15.8.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-scripts": "^5.0.1",
        "react-test-renderer": "^18.2.0",
        "rxjs": "^7.8.1",
        "semantic-release": "^22.0.0",
        "ts-jest": "^29.1.1",
        "ts-loader": "^9.4.4",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.6",
        "webpack": "^5.88.2",
        "webpack-cli": "^5.1.4",
        "webpack-compiler-plugin": "^1.1.5",
        "webpack-node-externals": "^3.0.0"
    }
}
