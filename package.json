{
    "name": "react-mirror",
    "version": "0.0.1",
    "description": "Create synchronized replicas of a React DOM element",
    "author": "iamogbz",
    "repository": {
        "type": "git",
        "url": "https://github.com/iamogbz/react-mirror"
    },
    "bugs": {
        "url": "https://github.com/iamogbz/react-mirror/issues"
    },
    "homepage": "https://github.com/iamogbz/react-mirror#readme",
    "license": "Unlicense",
    "keywords": [
        "mirror",
        "react-mirror",
        "react",
        "react-dom",
        "react-portal",
        "portal"
    ],
    "engines": {
        "node": ">=8",
        "npm": ">=6"
    },
    "main": "lib/main.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib"
    ],
    "scripts": {
        "lint": "eslint . --ext .js,.ts",
        "build": "webpack --mode=production",
        "build-watch": "webpack --mode=development --watch",
        "build-types": "tsc --declaration --emitDeclarationOnly --project tsconfig.prod.json",
        "test": "jest",
        "coveralls": "cat ./artifacts/coverage/lcov.info | coveralls",
        "typecheck": "tsc --noEmit",
        "commit": "git-cz",
        "release": "semantic-release"
    },
    "release": {
        "dryRun": false,
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/npm",
            "@semantic-release/github"
        ]
    },
    "jest": {
        "preset": "ts-jest",
        "setupFilesAfterEnv": [
            "./config/setupTests.ts"
        ],
        "moduleDirectories": [
            "./src",
            "./tests",
            "./node_modules"
        ],
        "testPathIgnorePatterns": [
            "./artifacts/",
            "./node_modules/"
        ],
        "coverageDirectory": "./artifacts/coverage"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "lint-staged": {
        "*.(j|t)s{,x}": [
            "pnpm lint",
            "pnpm test -- --bail --findRelatedTests"
        ]
    },
    "peerDependencies": {
        "react": "^16.0.0 || ^17.0.0",
        "react-dom": "^16.0.0 || ^17.0.0"
    },
    "dependencies": {
        "specificity": "^0.4.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.15.7",
        "@babel/core": "^7.15.8",
        "@babel/eslint-parser": "^7.15.8",
        "@babel/preset-typescript": "^7.15.0",
        "@commitlint/cli": "^16.0.0",
        "@commitlint/config-conventional": "^16.0.0",
        "@testing-library/react": "^12.1.2",
        "@testing-library/react-hooks": "^7.0.2",
        "@types/jest": "^27.0.2",
        "@types/node": "^17.0.17",
        "@types/react": "^17.0.14",
        "@types/react-dom": "^17.0.9",
        "@types/react-test-renderer": "^17.0.1",
        "@types/webpack": "^5.28.0",
        "@types/webpack-node-externals": "^2.5.3",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "acorn": "^8.5.0",
        "babel-loader": "^8.2.2",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "commitizen": "^4.2.4",
        "coveralls": "^3.1.1",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.0.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.26.1",
        "eslint-plugin-react-hooks": "^4.2.0",
        "husky": "^7.0.2",
        "jest": "^27.2.5",
        "lint-staged": "^12.0.0",
        "prettier": "^2.4.1",
        "prettier-eslint": "^13.0.0",
        "prop-types": "^15.7.2",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-scripts": "^5.0.0",
        "react-test-renderer": "^17.0.2",
        "rxjs": "^7.4.0",
        "semantic-release": "^18.0.0",
        "ts-jest": "^27.0.5",
        "ts-loader": "^9.2.6",
        "ts-node": "^10.3.0",
        "typescript": "^4.4.4",
        "webpack": "^5.58.1",
        "webpack-cli": "^4.9.0",
        "webpack-compiler-plugin": "^1.1.5",
        "webpack-node-externals": "^3.0.0"
    }
}
