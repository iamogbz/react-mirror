{
    "name": "react-mirror",
    "version": "0.0.1",
    "description": "Create synchronized replicas of a React DOM element",
    "author": "iamogbz",
    "repository": {
        "type": "git",
        "url": "https://github.com/iamogbz/react-mirror"
    },
    "bugs": {
        "url": "https://github.com/iamogbz/react-mirror/issues"
    },
    "homepage": "https://github.com/iamogbz/react-mirror#readme",
    "license": "Unlicense",
    "keywords": [
        "mirror",
        "react-mirror",
        "react",
        "react-dom",
        "react-portal",
        "portal"
    ],
    "engines": {
        "node": ">=8",
        "npm": ">=6"
    },
    "main": "lib/main.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib"
    ],
    "scripts": {
        "lint": "eslint . --ext .js,.ts,.jsx,.tsx",
        "build": "webpack --mode=production",
        "build-watch": "webpack --mode=development --watch",
        "build-types": "tsc --declaration --emitDeclarationOnly --project tsconfig.prod.json",
        "test": "jest",
        "coveralls": "cat ./artifacts/coverage/lcov.info | coveralls",
        "typecheck": "tsc --noEmit",
        "commit": "git-cz",
        "release": "semantic-release"
    },
    "release": {
        "dryRun": false,
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/npm",
            "@semantic-release/github"
        ]
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "jsdom",
        "setupFilesAfterEnv": [
            "./config/setupTests.ts"
        ],
        "moduleDirectories": [
            "./src",
            "./tests",
            "./node_modules"
        ],
        "testPathIgnorePatterns": [
            "./artifacts/",
            "./node_modules/"
        ],
        "testRegex": "(/__tests__/.+(\\.|/)(test|spec))\\.[jt]sx?$",
        "coverageDirectory": "./artifacts/coverage"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "lint-staged": {
        "*.(j|t)s{,x}": [
            "pnpm lint",
            "pnpm test -- --bail --findRelatedTests"
        ]
    },
    "peerDependencies": {
        "react": "^16.0.0 || ^17.0.0 || ^18.0.0",
        "react-dom": "^16.0.0 || ^17.0.0 || ^18.0.0"
    },
    "dependencies": {
        "specificity": "^0.4.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.17.10",
        "@babel/core": "^7.17.10",
        "@babel/eslint-parser": "^7.17.0",
        "@babel/plugin-syntax-flow": "^7.16.7",
        "@babel/plugin-transform-react-jsx": "^7.17.3",
        "@babel/preset-typescript": "^7.16.7",
        "@commitlint/cli": "^17.0.0",
        "@commitlint/config-conventional": "^17.0.0",
        "@testing-library/react": "^13.2.0",
        "@types/jest": "^28.1.1",
        "@types/node": "^18.0.0",
        "@types/react": "^18.0.9",
        "@types/react-dom": "^18.0.3",
        "@types/react-test-renderer": "^18.0.0",
        "@types/webpack": "^5.28.0",
        "@types/webpack-node-externals": "^2.5.3",
        "@typescript-eslint/eslint-plugin": "^5.22.0",
        "@typescript-eslint/parser": "^5.22.0",
        "acorn": "^8.7.1",
        "autoprefixer": "^10.4.7",
        "babel-loader": "^8.2.5",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "commitizen": "^4.2.4",
        "coveralls": "^3.1.1",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.14.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.29.4",
        "eslint-plugin-react-hooks": "^4.5.0",
        "husky": "^8.0.1",
        "jest": "^28.1.0",
        "jest-environment-jsdom": "^29.0.0",
        "lint-staged": "^13.0.0",
        "postcss": "^8.4.13",
        "prettier": "^2.6.2",
        "prettier-eslint": "^15.0.0",
        "prop-types": "^15.8.1",
        "react": "^18.1.0",
        "react-dom": "^18.1.0",
        "react-scripts": "^5.0.1",
        "react-test-renderer": "^18.1.0",
        "rxjs": "^7.5.5",
        "semantic-release": "^19.0.2",
        "ts-jest": "^28.0.4",
        "ts-loader": "^9.3.0",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.4",
        "webpack": "^5.72.0",
        "webpack-cli": "^4.9.2",
        "webpack-compiler-plugin": "^1.1.5",
        "webpack-node-externals": "^3.0.0"
    }
}
